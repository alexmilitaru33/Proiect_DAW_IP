@model List<Produs>
<div class="AllProduse">
    <h1>Toate produsele</h1>



    <h2>Sort by</h2>


    <a asp-action="ViewAllUsers" asp-route-sortOrder="PretCrescator" style="margin-right: 10px;">Pret Crescator</a>
    <a asp-action="ViewAllUsers" asp-route-sortOrder="PretDescrescator" style="margin-right: 10px;">Pret Descrescator</a> 

    
    <a asp-action="ViewAllUsers">Alfabetic A-Z</a>
    <a asp-action="ViewAllUsers">Alfabetic Z-A</a>

   @*  <a asp-action="Leaderboard" asp-route-sortOrder="Score" style="margin-right: 10px;">Sort by Score</a> |
    <a asp-action="Leaderboard" asp-route-sortOrder="UserName">Sort by UserName</a> *@



    @if (Model != null && Model.Any())
    {
        @foreach (var produse in Model)
        {
            <div style="border: 1px solid #ccc; padding: 10px; margin-bottom: 10px;">
                <h3>@produse.Nume</h3>
                <p>@produse.Descriere</p>
                <p>Pret: @produse.Pret</p>
                <p>Categorie: @produse.Categorie.Title</p>
                <div>
                    <ul>
                       <!-- <li><a asp-action="Edit" asp-controller="Produs" asp-route-id="@produse.Id">Edit</a></li> -->
                        <li><a asp-action="Delete"  asp-route-id="@produse.Id">Adauga in cos</a></li>
                    </ul>
                </div>
               
            </div>
        }
    }
    else
    {
        <p>Niciun produs nu a fost gasit.</p>
    }

    <!--
    <div>
        <a style="margin-bottom:20px" asp-controller="Produs" asp-action="Add" class="btn btn-primary">Adauga un produs nou</a>
    </div>
    -->

    <div>
        <a asp-controller="User" asp-action="Dashboard" class="btn btn-secondary">Inapoi Acasa</a>
    </div>
</div>

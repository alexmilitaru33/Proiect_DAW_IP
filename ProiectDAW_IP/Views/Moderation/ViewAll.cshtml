@model List<User>
<div class="AllUsers">
    <h1>All Users</h1>

    <div class="adminAdd">
        <a style="margin-bottom:20px;" asp-controller="Moderation" asp-action="Add" class="btn btn-primary">Add New User</a>
    </div>

    <div>
        <a style="margin-bottom:20px;" asp-controller="User" asp-action="Dashboard" class="btn btn-secondary">Inapoi Acasa</a>
    </div>

    @if (Model != null && Model.Any())
    {
        @foreach (var user in Model)
        {
            <div style="border: 1px solid #ccc; padding: 10px; margin-bottom: 10px;">
                <h3>Username: @user.UserName</h3>
                <p>Email: @user.Email</p>
                <p>User Type: @user.UserType</p>
                <p>Score: @user.Score</p>
                <div>
                    <ul>
                        <li><a asp-action="Edit" asp-controller="Moderation" asp-route-id="@user.Id">Edit</a></li>
                        <li><a asp-action="Delete" onclick="return confirm('Are you sure do you want to delete this item?')" asp-route-id="@user.Id">Delete</a></li>
                    </ul>
                </div>
            </div>
        }
    }
    else
    {
        <p>No Users found.</p>
    }




</div>
